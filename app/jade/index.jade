doctype html
html(lang='en')
    head
        title test
        meta( charset="utf-8")
        link( rel="stylesheet", href="styles/reset.css")
        link( rel="stylesheet", href="styles/main.css")
        link(rel="stylesheet", href="styles/colorbox.css")
        script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js")
        script(type="text/javascript", src="scripts/jquery.colorbox-min.js")
        script jQuery(document).ready(function(){jQuery('a.image').colorbox({innerWidth:700, innerHeight:500, scalePhotos:true});});
    body.body
        mixin input(listYear,listMonth)
             -var listYear;
             -var listMonth=["january","february","march","april","may","june","july","august","september","october","november","december"];
             -each month in listMonth
                 input(type="radio" name="month" class="radiobutton" id=month+listYear)
        +input(2013,listMonth)
        +input(2014,listMonth)
        +input(2015,listMonth)
        include block_menu/block_menu
        include block_navigation/block_navigation
        div.wrapper
            include block_header/block_header
            include block_gallery/block_gallery
